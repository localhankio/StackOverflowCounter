{
  "manifest_version": 2,

  "name": "SO Counter",
  "description": "Counts how many times you visit Stack Overflow",
  "version": "1.0",

  "background": {
    "persistent":false,
    "page": "ui_idk.html"
  },

  "browser_action": {
    "default_icon": "./img/i++.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches" : ["http://*/*"],
      "js": ["contentScript.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
  
  "externally_connectable": {
  "matches": ["*://*.example.com/*"]
}
  
}
